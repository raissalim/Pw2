                       $peso=60;
$altura=1,70;
$imc=$peso/$altura*$altura)
If($imc<18.5){
echo "abaixo do peso"
}
else if($imc=18,5 && $imc<25){
echo " normal";
}
else if ($imc>25 && $imc<30 ){
echo "sobrepeso ";
}
else if($imc=>30 && $imc <35){
echo " obesidade grau 1 ";
}
